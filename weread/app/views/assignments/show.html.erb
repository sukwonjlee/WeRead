<div>
	<h2><%= @assignment.title %></h2>
	<p>
		<strong>Content</strong><br>
		 <%= @assignment.content %>
	</p>
	<p>
		<strong>Due Date</strong><br>
		<%= @assignment.duedate.strftime("%B %d (%a), %Y, %I : %M %p %Z") %>
	</p>
</div>

<div class="center">	
	<%= link_to 'Edit', edit_assignment_path(@assignment.id), class: 'btn btn-info btn-sm' %>
	<%= link_to 'Delete', assignment_path(@assignment.id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %>
	<%= link_to 'Back', assignments_path, class: 'btn btn-primary btn-sm' %>
</div>