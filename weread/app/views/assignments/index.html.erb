<div class="center">
	<h1>WeRead</h1>
	<h3>Engaging Students in Reading Assignments and Discussion</h3>
</div>

<div>
	<table class="table table-hover">
		<tr>
			<th>Assignment</th>
			<th>Due Date</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% @assignments.each do |assignment| %>
			<tr>
				<td><%=link_to assignment.title, assignment_path(assignment.id)   %></td>
				<td><%= assignment.duedate.strftime("%b %d, %Y") %></td>
	
			</tr>
		<% end %>
	</table>
</div>

<div class="center">	
	<%= link_to 'Create New Reading Assginment', new_assignment_path, class: 'btn btn-primary btn-lg' %>
</div>